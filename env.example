# ==============================================
# SINDICAPP - ENVIRONMENT VARIABLES EXAMPLE
# ==============================================
# Copy this file to .env and fill in your values

# ==============================================
# GENERAL CONFIGURATION
# ==============================================
NODE_ENV=development
APP_NAME=SindicApp
APP_VERSION=0.1.0

# ==============================================
# FRONTEND CONFIGURATION (Next.js)
# ==============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# ==============================================
# BACKEND CONFIGURATION (Express.js)
# ==============================================
PORT=4000
API_URL=http://localhost:4000
CORS_ORIGIN=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
DATABASE_URL=postgresql://sindicapp_user:password@localhost:5432/sindicapp_dev
POSTGRES_USER=sindicapp_user
POSTGRES_PASSWORD=password
POSTGRES_DB=sindicapp_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ==============================================
# REDIS CONFIGURATION (Cache)
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@sindicapp.com
FROM_NAME=SindicApp

# ==============================================
# GOOGLE MAPS API
# ==============================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==============================================
# FILE UPLOAD (Cloudinary or local)
# ==============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp

# ==============================================
# PUSH NOTIFICATIONS
# ==============================================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@sindicapp.com

# ==============================================
# MONITORING & LOGGING
# ==============================================
LOG_LEVEL=debug
SENTRY_DSN=your-sentry-dsn

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true
DEBUG_SQL=false 